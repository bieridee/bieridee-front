<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/registrationRelativeLayoutUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="5dp" >

        <EditText
            android:id="@+id/registrationInputUsername"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:hint="@string/inputUsernameText" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/registrationRelativeLayoutUsernameHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone" >

        <TextView
            android:id="@+id/registrationUsernameHint"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/registrationUsernameForgiven"
            android:textColor="@color/red" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/registrationRelativeLayoutPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="5dp" >

        <EditText
            android:id="@+id/registrationInputPassword"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:hint="@string/inputPasswordText" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/registrationRelativeLayoutEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="5dp" >

        <EditText
            android:id="@+id/registrationInputEmail"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:hint="@string/inputEmailText" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/registrationRelativeLayoutEmailHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone" >

        <TextView
            android:id="@+id/registrationEmailHint"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/registrationInvalidEmail"
            android:textColor="@color/red" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/registrationRelativeLayoutSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center" >

        <Button
            android:id="@+id/registrationButtonRegister"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/register" />
    </RelativeLayout>

</LinearLayout>